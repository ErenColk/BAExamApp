<!DOCTYPE html>
@{
    ViewData["Title"] = "Erişiminiz Engellendi";
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ErrorIndex</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/errorpage.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    
    <div class="text">
        <svg width="400px" height="300px" viewBox="0 0 837 1500">
            <g id="Page-1" fill-rule="evenodd" sketch:type="MSPage">
                <circle d="M353,9 L626.664028,170 L626.664028,487 L353,642 L79.3359724,487 L79.3359724,170 L353,9 Z" id="Polygon-1" cx="640" cy="425" r="75" fill="#3babe1" />
                <circle d="M353,9 L626.664028,170 L626.664028,487 L353,642 L79.3359724,487 L79.3359724,170 L353,9 Z" cx="425" cy="550" r="75" fill="#414b59" />
                <circle d="M78.5,529 L147,569.186414 L147,648.311216 L78.5,687 L10,648.311216 L10,569.186414 L78.5,529 Z" id="Polygon-2" cx="425" cy="250" r="75" fill="#e63338" />
                <circle d="M773,186 L827,217.538705 L827,279.636651 L773,310 L719,279.636651 L719,217.538705 L773,186 Z" id="Polygon-3" cx="640" cy="700" r="75" fill="#652980" />
                <circle d="M639,529 L773,607.846761 L773,763.091627 L639,839 L505,763.091627 L505,607.846761 L639,529 Z" id="Polygon-4" cx="200" cy="700" r="75" fill="#f39600" />
                <circle d="M281,801 L383,861.025276 L383,979.21169 L281,1037 L179,979.21169 L179,861.025276 L281,801 Z" id="Polygon-5" cx="200" cy="425" r="75" fill="#009f3e" />
                <rect d="M281,801 L383,861.025276 L383,979.21169 L281,1037 L179,979.21169 L179,861.025276 L281,801 Z" id="Polygon-5" x="375" y="700" width="100" height="300" rx="100" ry="50" fill="#414b59" />
                <circle d="M281,801 L383,861.025276 L383,979.21169 L281,1037 L179,979.21169 L179,861.025276 L281,801 Z" id="Polygon-5" cx="425" cy="530" r="450" stroke="#414b59" stroke-width="50" fill="none" />
            </g>
        </svg>
        <img src="/images/akademilogo copy.png" style="height: 100px;" alt="" class="src">
        <br>
        <br>
        <br>
        <h1>@ViewBag.StatusCode</h1>
        <h2>@ViewBag.ErrorMessage</h2>
        <h3>Görünüşe göre kayboldun...</h3>
        <div class="buttons-con">
            <div class="action-link-wrap">
                <a onclick="history.back(-1)" class="link-button link-back-button">Geri Dön</a>
                <a href="@Url.Action("Index", "Home")" class="link-button">Ana Sayfa</a>
            </div>
        </div>
       
    </div>


    <div class="astronaut">
        <a> <img src="/images/astronaut.png" alt="" class="src"></a>

    </div>
    <script src="~/js/errorpage.js"></script>
</body>
</html>








