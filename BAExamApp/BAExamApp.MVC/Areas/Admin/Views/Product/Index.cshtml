												</div>
												<!--end::Menu item-->
											</div>
											<!--end::Menu-->
										</td>
									</tr>
								}
							</tbody>
						</table>
						<!--end::Datatable-->
					</div>
					<!--end::CRUD-->
				</div>
				<!--end::Section-->
			</div>
			<!--end::Card Body-->
