@section Scripts
    {
    @*<script src="~/lib/limonte-sweetalert2/sweetalert2.all.js"></script>*@
    <script src="~/newlayouts/dist/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script>
        var localizer = {
			emptyTable: '@SharedLocalizer["Empty_Data"]',
			infoEmpty: '@SharedLocalizer["Info_Empty"]',
            info: '@SharedLocalizer["Info"]',
			infoFiltered: '@SharedLocalizer["Info_Filtered"]',
			zeroRecords: '@SharedLocalizer["Zero_Records"]'
		};
        $(document).ready(function () {
            let dt = $("#kt_datatable_example_1").DataTable({
                lengthMenu: [10, 20],
                dom:
                    '<"row"<"col-sm-12"tr>>' +
                    '<"row"<"col-sm-12 col-md-1"l><"col-sm-12 col-md-5"i><"col-sm-12 col-md-6"p>>',
                language: {
                    emptyTable: localizer.emptyTable,
					infoEmpty: localizer.infoEmpty,
                    info: localizer.info,
					infoFiltered: localizer.infoFiltered,
					zeroRecords: localizer.zeroRecords
                }
            });
            $('input[data-kt-docs-table-filter="search"]').on('keyup', function () {
                dt.search($(this).val()).draw();
            });
            function updatePaginationArrows() {
                $('#kt_datatable_example_1_previous a').html('<i class="fa fa-chevron-left"></i>');
                $('#kt_datatable_example_1_next a').html('<i class="fa fa-chevron-right"></i>');
            }
            updatePaginationArrows();
            // dt.on('draw.dt', function () {
            //     updatePaginationArrows();
            //     updateInfoText(dt.page.info());
            // });
            // function updateInfoText(pageInfo) {
            //     var infoText = pageInfo.recordsTotal + " kayıttan " + (pageInfo.start + 1) + " ile " + pageInfo.end + " arasındaki kayıtlar gösteriliyor";
            //     $('#kt_datatable_example_1_info').html(infoText).css({
            //         'margin-top': '6px',
            //         'font-size': '14px',
            //         'font-family': 'Poppins, Helvetica, sans- serif',

            //     });
            // }
            // updateInfoText(dt.page.info());
        });
        var localizedStrings = {
            confirmTitle: '@SharedLocalizer["Confirm_Title"]',
            confirmText: '@SharedLocalizer["Confirm_Text"]',
            confirmButtonText: '@SharedLocalizer["Confirm_Button_Text"]',
            cancelButtonText: '@SharedLocalizer["Cancel_Button_Text"]',
            successTitle: '@SharedLocalizer["Success_Title"]',
            successText: '@SharedLocalizer["Success_Text"]',
            errorTitle: '@SharedLocalizer["Error_Title"]',
            errorText: '@SharedLocalizer["Error_Text"]'
        };
        $(".btn.btn-danger.mx-2").click(function () {
            const id = $(this).attr("data-id");
            console.log(id);
            Swal.fire({
                title: localizedStrings.confirmTitle,
                text: localizedStrings.confirmText,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: localizedStrings.confirmButtonText,
                cancelButtonText: localizedStrings.cancelButtonText
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("Delete")", // Bu kısım sunucu tarafı URL oluşturmak için kullanılır, JavaScript tarafında çalışmaz
                        data: { id: id },
                        dataType: "json",
                        success: function (data) {
                            Swal.fire({
                                title: localizedStrings.successTitle,
                                text: localizedStrings.successText, // Örneğin, `data.message` kullanarak sunucudan gelen mesajı kullanabilirsiniz
                                icon: 'success'
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function (xhr, status, error) {
                            Swal.fire({
                                title: localizedStrings.errorTitle,
                                text: localizedStrings.errorText,
                                icon: 'error'
                            });
                            console.log("Ajax hatası: " + error);
                        }
                    });
                }
            });
        });
    </script>
}
